{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
  "module": "ESNext",
  "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  "skipLibCheck": true,
  "types": ["vite/client", "vitest/globals", "node"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.test.ts", "src/**/*.spec.ts", "tests/**/*"]
}
